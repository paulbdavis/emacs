#!/usr/bin/env bash

FONT_DIR=/usr/share/fonts/local

if [[ -d "$FONT_DIR" ]]
then
    xset +fp $FONT_DIR
    xset fp rehash
fi

xsetroot -solid "#2c2c2c"

[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

export PATH=$HOME/.emacs.d/exwm/bin:$PATH

# disable caps lock
setxkbmap -option ctrl:nocaps
